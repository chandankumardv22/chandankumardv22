<!DOCTYPE html>
<html>
<head>
    <title>Squares and Cubes</title>
</head>
<body>
    <h1>Squares and Cubes of Numbers from 0 to 10</h1>
    <div id="table-container"></div>

    <script>
        function generateTable() {
            let table = "<table border='1' align='center' cellpadding='5' cellspacing='5'>";
            table += "<tr><th>Number</th><th>Square</th><th>Cube</th></tr>";
            for (let i = 0; i <= 10; i++) {
                table += `<tr><td>${i}</td><td>${i * i}</td><td>${i * i * i}</td></tr>`;
            }
            table += "</table>";
            document.getElementById("table-container").innerHTML = table;
        }

        generateTable();
    </script>
</body>
</html>
